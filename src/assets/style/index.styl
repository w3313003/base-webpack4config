$mainColor = #2d8afc;

body
    background: rgba(0, 0, 0, .5);

a
    text-decoration: none
    color #333
li 
    list-style: none
.u-center
    width: 1200px
    margin: auto
    font-family: PingFang SC, Microsoft Yaheis;
    background: #fff
    overflow hidden
    font-size: 14px
    color: #333
    &.agent
        width: 800px
    &-title
        height 50px
        line-height: 50px
        color: #333333
        font-size: 16px
        padding-left: 32px
    &-body
        background-color: #f3f4f6
        padding: 20px
    &-header
        background-color: #ffffff
        border-radius: 4px
        padding: 20px 20px
        overflow hidden
        & > div
            float left
            &.u-center-toolbar
                float right
                .tool-item
                    vertical-align middle
                    font-size 13px
                    color: $mainColor
                    cursor pointer
                    padding 0 20px
                    position relative
                    &:last-child
                        padding-right: 0
                        &::after
                            width: 0
                    &::after
                        content ""
                        position: absolute
                        width: 2px
                        height 13px
                        background-color: #dce0e5
                        right 0
                        top: 4px
                    img
                        display inline-block
                        vertical-align middle
                    span
                        vertical-align middle
        .u-center-info
            padding-right: 30px
            position relative
            vertical-align: middle;
            &::after
                content ""
                position: absolute
                width: 2px
                height 16px
                background-color: #dce0e5
                right 0
                top: 3px
            &.wx-icon::after 
                width: 0
            &.ddsz
                padding-left: 15px
                &:first-child
                    padding-left: 0
            &-logo
                display: inline-block;
                width: 23px
                height: 23px
                vertical-align: middle
                margin-right: 10px
            span
                vertical-align: -3px;
                font-weight: bold
            img
                vertical-align: middle
                margin-right: 10px
        .u-center-balance
            padding-left 30px
            font-size: 14px
            margin-top: 2px
            span
                vertical-align: middle;
            &-label
                color: #999
            img
                height 14px
                width: 14px
                vertical-align: middle;
                cursor pointer
            &-value
                font-weight: bold
                margin 1px 5px 0
            &-btn
                color: $mainColor
                cursor pointer

.plugin-wrap
    margin-top: 16px
    overflow hidden
    .plugin-right
        margin-left:846px;
        height 425px
        position relative
        box-sizing border-box
        padding-left 20px
        // margin-top:40px
        &-bg
            position absolute
            left 20px
            top:0
            height auto
            display block
        &.pdd-right
            margin-top: 0
        .plugin-right-inner
            position: absolute
            bottom 22px
            width: 236px
            height 220px
            background: #fff
            box-sizing: border-box
            border-radius: 5px
            left: 50%
            margin-left: -108px
            padding: 14px 16px
            &-title
                vertical-align: middle
                text-align: center
                margin-bottom: 14px
                img
                    display: inline-block
                    width: 16px
                    height 16px
                    vertical-align: middle
                span
                    vertical-align: middle
                    font-size 14px
                    font-weight: bold
            &-nav
                height 26px
                line-height: 26px
                background-color: #ecf7ff
                border-radius: 4px
                span
                    font-size 12px
                    display: inline-block
                    width: 48%
                    text-align: center
                    color: #999
            &-scroll
                height 130px
                &-item
                    height 26px
                    line-height: 26px
                    span
                        font-size 12px
                        display: inline-block
                        width: 48%
                        overflow hidden
                        text-align: center
                        color: #333
    .plugin-left
        float: left;
        width 846px
        .plugin-nav
            overflow hidden
            .plugin-item
                float left
                width 165px
                height 40px
                background-color: #f8fbff
                color #666
                font-size 14px
                line-height: 40px
                text-align: center
                border-top-left-radius: 4px
                border-top-right-radius: 4px
                margin-right: 1px
                cursor pointer
                &.active
                    background-color: #fff
                    color #108ee9
                    font-weight: bold
                img
                    vertical-align: middle
                    width: 16px
                    height 16px
                    display: inline-block
                    margin-right: 7px
                span
                    vertical-align: middle
        .plugin-body
            background-color: #fff
            padding: 20px 20px 0
            box-sizing: border-box
            height 384px
            border-radius: 4px
            overflow-y: scroll
            overflow-x: hidden
            .plugin-list
                // height 314px
                // overflow-y: scroll
            .plugin-row
                height 44px
                line-height: 44px
                border-bottom: 1px solid #f5f6fa
                &:last-child
                    border-bottom 0
                &.t-header
                    background-color: #f5f6fa
                .plugin-col
                    display: inline-block
                    text-align: left
                    position relative
                    box-sizing: border-box
                    &.t-f-header
                        box-sizing: border-box
                    &:first-child
                        width 337px
                        box-sizing: border-box
                        padding-left: 100px
                    &:nth-child(2)
                        width: 214px
                    &:last-child
                        width: 238px
                    .copy-icon
                        vertical-align: middle
                        width: 14px
                        height 14px
                        display: inline-block
                        cursor pointer
                        margin-left: 15px
                        background-image: url(https://qiniu.amingtool.com/c4ccbsd5k49b/20201204/1607059577000_copy-icon.png)
                        background-size: cover
                    span
                        vertical-align: middle
                    .float-tag
                        color: #fff
                        background-color: #ff5a5a
                        height 24px
                        line-height: 24px
                        border-radius 12px
                        border-bottom-left-radius 0
                        padding 0 10px
                        position absolute
                        font-size 12px
                        top -13px
                        left 90px
                        box-shadow 1px 1px 4px #ff5a5a
                        user-select none

.help-action
    overflow hidden
    margin-top: 20px
    .update-log
        float: left;
        width 846px
        box-sizing: border-box
        padding 17px 30px
        background-color: #ffffff
        border-radius: 4px
        height 185px
        &-header
            overflow hidden
            margin-bottom: 15px
            &-title
                font-weight: bold
        .update-log-header-more
            font-size: 12px
            float: right
            color: #999
            cursor pointer
            margin-top: 1px
        .update-log-scroller
            height 120px
            overflow-y: scroll
        &-content
            // margin-top: 15px
            overflow hidden
            height: 120px
            font-size 0
            margin-bottom: 10px
            &:last-child
                margin-bottom: 0
            .update-log-item
                font-size 14px
                vertical-align: middle
                display: inline-block
                width: 380px
                height 120px
                background-color: #f5f6fa
                box-sizing: border-box
                padding: 16px 15px
                border-radius: 4px
                margin-right: 14px
                cursor pointer
                &:nth-child(even)
                    margin-right: 0
                &-header
                    overflow hidden
                    color #333
                    margin-top 5px
                    .date
                        font-size: 12px
                        float right
                        margin-top 2px
                &-text
                    margin-top: 20px
                    font-size: 12px
                    color: #666
                    line-height: 20px
                    overflow : hidden;
                    text-overflow: ellipsis;
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    /*! autoprefixer: off */
                    -webkit-box-orient: vertical;
                    height 43px
    .other-product
        margin-left:846px;
        padding-left 20px
        box-sizing: border-box
        &-inner
            background-color: #ffffff
            border-radius: 4px
            height 185px
            box-sizing: border-box
            padding 17px 20px 0
        .other-product-header
            font-weight: bold
            position relative
            &-toolbar
                position: absolute
                bottom: 0
                right: 0
                display: flex
                align-items: center
                justify-content: space-between
                width: 30px
                .triangle
                    cursor pointer
                    transition all .3s
                    &.left
                        width: 0;
                        height: 0;
                        border-style: solid;
                        border-width: 5px 8.7px 5px 0;
                        border-color: transparent #bfbfbf transparent transparent;
                        &:hover
                            border-color: transparent $mainColor transparent transparent;
                    &.right
                        width: 0;
                        height: 0;
                        border-style: solid;
                        border-width: 5px 0 5px 8.7px;
                        border-color: transparent transparent transparent #bfbfbf;
                        &:hover
                            border-color: transparent transparent transparent $mainColor;

        &-banner
            margin-top: 15px
            width: 100%
            .slide-item
                display: block
                width: 100%
                height: 120px
                background-repeat: no-repeat
                background-size cover
                background-position: center center
                border-radius: 4px

.u-center-footer
    height 60px
    line-height: 60px
    background-color: #fff
    & > div 
        float: left
        width: 33.333333%
        text-align: center
        box-sizing: border-box
        padding: 0 10px
        text-align: center
.tag
    position: absolute
    top: 50%
    margin-top: -10px
    left: 40px
    padding: 0 10px
    line-height: 20px
    height 20px
    text-align: center
    font-size: 12px
    border-radius: 4px
    &.cur
        color: #0073ff
        background-color: #e0effe
    &.free
        color: #ea291f
        background-color: #fee0e0
.text-btn
    color: $mainColor
    cursor pointer
    margin-right: 10px

.more-btn
    position: absolute
    width: 94px
    height 30px
    line-height: 30px
    text-align: center
    color #fff
    font-size 12px
    border-radius: 15px
    bottom -15px
    left 50%
    margin-left: -43px
    background: #037bfb;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to bottom, #86b6f7, #037bfb);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to bottom, #86b6f7, #037bfb); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    cursor pointer

.u-center-link
    span
        vertical-align: middle
    img
        vertical-align: middle
.u-center-desc
    img
        vertical-align: middle
    span
        vertical-align: middle

.u-center-contact
    img
        vertical-align: middle
    span
        vertical-align: middle
    .wx-icon-wrap
        display: inline-block
        position relative
        cursor pointer
        z-index: 9999
        .qrcode-wrap
            position: absolute
            width: 100px
            height 100px
            left: 50%
            transform: translate3d(-50%, 20px, 0);
            opacity 0
            z-index: 9999
            transition: all .5s
            pointer-events: none   
            padding: 5px;
            bottom: 0
            background-color: #fff;
            box-shadow: 0px 2px 7px 0 #d5d4d4;
            &::after 
                position: absolute
                content ""
                width: 0;
                height: 0;
                border-style: solid;
                border-width: 8.7px 5px 0 5px;
                border-color: #fff transparent  transparent transparent;
                bottom: -8px
                left: 50%
                margin-left: -2.5px
            img
                width: 100%
                height 100%
        &:hover
            .qrcode-wrap
                transform: translate3d(-50%, -70px, 0)
                opacity 1

.t-header
    .plugin-col:last-child
        width 238px!important
        box-sizing: border-box

.to-gw
    text-align: right 
    font-size: 12px
    a
        color: $mainColor

.webui-popover
    border: 0!important
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1)!important
    color #333
    .arrow
        border 0!important
        &:after
            margin-left: 4px!important
            border-width: 7px!important;
            bottom: -3px!important;

.other-product-header-toolbar 
    display: none!important